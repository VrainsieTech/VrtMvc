{
  "name": "My Awesome PWA",
  "short_name": "AwesomePWA",
  "description": "A truly awesome Progressive Web App.",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait", // or "landscape" or "any"
  "background_color": "#ffffff",
  "theme_color": "#007bff", // Primary brand color
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable" // Recommended for adaptive icons
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [ // Optional, but highly recommended
    {
      "src": "/screenshots/screenshot1.png",
      "type": "image/png",
      "sizes": "1080x1920", // Example size, adjust as needed
      "label": "Home screen of the app" // Important for accessibility
    },
     {
      "src": "/screenshots/screenshot2.png",
      "type": "image/png",
      "sizes": "1080x1920", // Example size, adjust as needed
      "label": "An example of the app in use" // Important for accessibility
    }
  ],
  "related_applications": [ // Optional, for native app promotion
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=your.native.app.id",
      "id": "your.native.app.id"
    }
    // Add similar entries for other platforms like the App Store
  ],
  "prefer_related_applications": false, // If true, prefers native app over PWA
   "categories": [ // Optional, for better discoverability
        "productivity",
        "utilities"
    ],
    "dir": "ltr", // Text direction, default is "ltr"
    "lang": "en-US", // Language of the app, default is browser's language
    "scope": "/", // Navigation scope for the PWA. Defaults to the start_url's folder.
}